<% include ./partials/header %>
<div class="row" style="margin-top:20px;">
  <div class="col s12 m6 offset-m3">
    <div class="card">
      <div class="card-content">
        <div class="black-text">
          <span class="card-title">Sign Up</span>
        </div>
        <br>
        <div class="input-field">
          <input placeholder="Enter Username..."  type="text" class="validate">
          <label >Username</label>
        </div>
        <div class="input-field">
          <input placeholder="Enter Email..."  type="email" class="validate">
          <label >Email</label>
        </div>
        <div class="input-field">
          <input placeholder="Enter Password..."  type="password" class="validate">
          <label >Password</label>
        </div>
        <div class="input-field">
          <input placeholder="Enter Password Again..."  type="password" class="validate">
          <label >Password Again</label>
        </div>
        <button class="btn grey darken-4" type="submit" >Sign Up</button>
      </div>
    </div>
  </div>
</div>
<% include ./partials/footer %>
